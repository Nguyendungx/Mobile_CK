<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button1" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/radiusbut1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="button2" parent="Widget.AppCompat.Button">
        <item name="android:radius">20dp</item>
        <item name="android:textColor">@color/green_bold</item>
        <item name="android:background">@drawable/radiusbut2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="textviewblack">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="textviewgreen">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>