<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="@drawable/background_login">
    <TextView
        android:id="@+id/titleLogin"
        android:layout_marginTop="80dp"
        android:text="Cửa hàng thiết bị"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="@font/svn_androgyne"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Sử dụng email để đăng nhập"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtAccount"
                android:hint="Email"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/boder_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_marginTop="15dp"
                android:hint="Mật khẩu"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/boder_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#9EF13D"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/login"
                android:text="Đăng nhập"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAllCaps="false"
                android:background="#01C609"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/register_account"
            android:layout_marginTop="20dp"
            android:text="@string/title_register_account"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/svn_androgyne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>